<div class="container">
	<h3>Select Quiz</h3>
	<div class="list_deck">
    <h4>
      <ul>
  			<% @decks.each do |deck| %>
    			<li><a href='/deck/<%=deck.id %>/start'><%= deck.name %></a> [ <a href='/deck/<%=deck.id %>/cards'>Edit</a> | <a href='/deck/<%=deck.id %>/delete'>Delete</a> ]</li>
  			<% end %>
      </ul>
    </h4>

    <ul>
    <form id="add_deck" action='/decks' method='post'>
      <div class="fade_initiate">
        <li><input class= "pure-button pure-button-orange add_deck_button" type='button' value='Add New Deck' /></li>
      </div>
      <div class="fade_in_items" style="display: none;">
        <li><input id="deck_name" type='text' name='new_deck_name' /></li>
        <li><input class= "pure-button pure-button-green" type='submit' value='Create quiz' />   <input class= "pure-button pure-button-orange cancel_new_deck" type='button' value='Cancel' /></li>
      </div>
    </form>
    </ul>

    <% if @message %>
    <p>
      <ul>
        <% @message.each do |error_message| %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
    </p>
    <% end %>
</div>
