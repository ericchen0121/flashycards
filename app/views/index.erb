<div class="container">
  <h1>Test Your Knowledge with our Decks!</h1>
  
  <ul>
    <form class="list" action='/create' method='post'>
      <h2>Create:</h2>
      <li>Username: <input type='text' name='name'/></li><br>
      <li>Password: <input type='text'name='password'/></li><br>
      <li><input class="button" type='submit' value='Submit'/></li>
    </form>
  </ul>
  or...
  <ul>
    <form class="list" action='/login' method='post'>
      <h2>Login:</h2>
      <li>Username: <input type='text' name='name'/></li><br>
      <li>Password: <input type='text'name='password'/></li><br>
      <li><input class="button" type='submit' value='Submit'/></li>
    </form>
  </ul>
  <br>

  <% if @message %>
  <p>
    <ul>
      <% @message.each do |error_message| %>
        <li><%= error_message %></li>
      <% end %>
    </ul>
  </p>
  <% end %>
</div>

